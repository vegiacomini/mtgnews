<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>MTGNews</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="icon" href="/views/imgs/cubo-3d.png">
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">
    <link href="https://getbootstrap.com/docs/4.0/examples/sign-in/signin.css" rel="stylesheet">
</head>

<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">

  </nav>
</header>

<body class="text-center">

  <% data.forEach(function(details) { %>
    <form class="form-signin" action="/edit/<%= details._id %>" method="POST">
      <h2>Editar Registro</h2>
      <input class="form-control" type="text" value="<%= details.name %>" name="name">
      <input class="form-control" type="email" value="<%= details.surname %>" name="surname">
      <br />
      <button class="btn btn-outline-success my-2 my-sm-0"><a href="/show">Todos</a></button>
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Editar</button>
    </form>
  <%  }) %>

</body>
</html>
